import java.util.Random;
import java.util.Scanner;

public class numAleatorio {
    public static void main(String[] args) {
        Scanner Adivinha = new Scanner(System.in);
        Random rand = new Random();

        int numSecreto = rand.nextInt(100);
        int tentativa = 0;
        boolean acertou = false;

        System.out.println("Advinhe qual número estou pensando");

        for (int i = 0; i < 5; i++) {
            System.out.println("tentativa número "+i);
            tentativa = Adivinha.nextInt();

            if(tentativa==numSecreto){
                System.out.println("Parabéns, você acertou");
                acertou =  true;
                break;
            }else if(tentativa > numSecreto){
                System.out.println("O número é menor que " + tentativa);
            }else{
                System.out.println("O número é maior que " +tentativa);
            }
        }
        if(!acertou){
            System.out.println("Suas tentativas acabaram! O número era " + numSecreto);
        }

        Adivinha.close();
    }
}
